<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" placeholder="Escribe la pregunta"><p>
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" placeholder="Escribe la respuesta"><p>
<label for="tem" class="rem">Tema:</label>
<select name="quiz[tema]" id="cat">
	<option value="otro" selected>Otro</option>
	<option value="humanidades">Humanidades</option>
	<option value="ocio">Ocio</option>
	<option value="ciencia">Ciencia</option>
	<option value="tecnologia">Tecnologia</option>
</select><p>
<script>
	document.getElementById("cat").value = "<%=quiz.tema %>";
</script>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Guardar">
